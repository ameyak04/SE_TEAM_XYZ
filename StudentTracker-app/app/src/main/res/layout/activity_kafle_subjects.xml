<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KafleSubjects"
    android:background="#303030">


    <TextView
        android:id="@+id/imageviewformaja"
        android:layout_width="246dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/comfortaa"
        android:text="Attendance Of All Subjects"
        android:textColor="#fff"
        android:textSize="25sp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="26dp"
        android:layout_marginRight="2dp"
        android:layout_toLeftOf="@+id/imageviewformaja"
        android:src="@drawable/bookallsub" />

    <ListView
        android:id="@+id/listallsub"
        android:layout_width="wrap_content"
        android:layout_height="450dp"
        android:layout_below="@+id/imageviewformaja"
        android:layout_alignParentStart="true"

        android:layout_alignParentEnd="true"
        android:layout_marginStart="-6dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/date"
        android:listSelector="@drawable/date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.891"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="69dp" />

</RelativeLayout>