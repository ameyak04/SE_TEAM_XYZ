<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#CACACA"
    tools:context=".student_attendance_sheet">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:text="TextView"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="25dp"
        android:fontFamily="@font/open_sans_bold"
        android:layout_marginRight="8dp"
        android:textColor="#000000"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="7dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.017"
        app:layout_constraintHorizontal_bias="0.502" />





        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/spinnerSubject2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="top"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="Select Subjects"
            android:fontFamily="@font/open_sans_bold"
            android:background="@drawable/spinner"
            app:ms_text_color="#0D0D25"
            app:ms_hint_color="#0D0D25"
            />
<!--    android:entries="@array/subjects"-->


    <ListView
        android:id="@+id/list3"
        android:layout_width="wrap_content"
        android:layout_height="534dp"
        android:layout_marginLeft="10dp"

        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/date"
        android:listSelector="@drawable/date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.891"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="69dp" />

    <TextView
        android:id="@+id/tvPresent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="Total Present:  "
        android:textColor="#1F5100"
        android:textSize="20sp"

        android:textStyle="bold" />


    <TextView
        android:id="@+id/tvAttendance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="Your Attendance is  "
        android:textColor="#3F51B5"
        android:textSize="20sp"

        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/btGetAtd"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_weight="1"
            android:background="@drawable/button2"
            android:fontFamily="@font/open_sans_semibold"
            android:text="   Get ATD   "
            android:textColor="#fff"
            android:textSize="17sp" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="0.5" />

        <Button
            android:id="@+id/btGetAtdall"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_weight="1"
            android:background="@drawable/button2"
            android:fontFamily="@font/open_sans_semibold"
            android:onClick="getAllSub"
            android:text=" GET All ATD "
            android:textColor="#fff"
            android:textSize="17sp" />


    </LinearLayout>

