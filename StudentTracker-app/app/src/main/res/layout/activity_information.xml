<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#010101"
    tools:context=".Information">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_viewInfo"
        android:layout_width="250dp"
        android:layout_height="190dp"
        app:lottie_fileName="aboutapp.json"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        android:layout_centerHorizontal="true"/>


    <TextView
        android:id="@+id/infotext1"
        android:layout_width="334dp"
        android:layout_height="358dp"
        android:layout_below="@id/animation_viewInfo"
        android:layout_centerInParent="true"
        android:layout_marginTop="72dp"
        android:fontFamily="@font/open_sans_semibold"
        android:text="This app makes life easy for students by helping them to check their attendance in a single click and for teachers and class representatives by reducing all the paper work. This app maintains all data in an online secure database. It also creates an offline copy of the attendance if required. "
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="20sp" />

